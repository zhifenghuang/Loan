<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_14"
        android:text="@string/app_identity_security_auth"
        android:textColor="@color/color_0d_0d_0d"
        android:textSize="@dimen/dimen_30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="@string/app_real_name_tip"
        android:textColor="@color/color_8b_8b_8b"
        android:textSize="@dimen/dimen_16" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIdentity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jd_icon_shenf"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_identity_info"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvIdComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/jd_icon_next"
                android:gravity="center_vertical"
                android:text="@string/app_completed"
                android:textColor="@color/color_49_68_ea"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tvGoBlankId"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_shape_4968ea_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_18"
                android:text="@string/app_go_blank"
                android:textColor="@color/color_ff_ff_ff"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jd_icon_ziliao"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_data_info"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvDataComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/jd_icon_next"
                android:gravity="center_vertical"
                android:text="@string/app_completed"
                android:textColor="@color/color_49_68_ea"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGoBlankData"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_shape_4968ea_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_18"
                android:text="@string/app_go_blank"
                android:textColor="@color/color_ff_ff_ff"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBankCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jd_icon_sbank"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_bank_card"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvBankCardComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/jd_icon_next"
                android:gravity="center_vertical"
                android:text="@string/app_completed"
                android:textColor="@color/color_49_68_ea"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGoBlankBankCard"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_shape_4968ea_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_18"
                android:text="@string/app_go_blank"
                android:textColor="@color/color_ff_ff_ff"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPhoneVer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jd_icon_call"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_phone_auth"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvPhoneVerComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/jd_icon_next"
                android:gravity="center_vertical"
                android:text="@string/app_completed"
                android:textColor="@color/color_49_68_ea"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGoBlankPhoneVer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_shape_4968ea_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_18"
                android:text="@string/app_go_blank"
                android:textColor="@color/color_ff_ff_ff"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvHandMark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jd_icon_qianm"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center_vertical"
                android:text="@string/app_hand_mark"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvHandComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/jd_icon_next"
                android:gravity="center_vertical"
                android:text="@string/app_completed"
                android:textColor="@color/color_49_68_ea"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGoBlankHand"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_shape_4968ea_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_18"
                android:text="@string/app_go_blank"
                android:textColor="@color/color_ff_ff_ff"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>