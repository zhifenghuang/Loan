<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:background="@drawable/app_shape_ffffff_8_top"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/jd_home_t_close" />


        <com.common.lib.view.WheelView
            android:id="@+id/wheelView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:itemNumber="5"
            app:lineColor="@color/transparent"
            app:normalTextColor="@color/color_8b_8b_8b"
            app:normalTextSize="@dimen/dimen_18"
            app:selectedTextColor="@color/color_49_68_ea"
            app:selectedTextSize="@dimen/dimen_18"
            app:unitHight="@dimen/dimen_41" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10" />


        <TextView
            android:id="@+id/tvOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:background="@drawable/app_shape_4968ea_25"
            android:gravity="center"
            android:text="@string/app_ok"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="@dimen/dimen_18" />

    </LinearLayout>


</LinearLayout>