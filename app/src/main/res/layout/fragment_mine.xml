<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_44"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:src="@drawable/jd_pro_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:src="@drawable/app_shape_000000_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_19"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_8b_8b_8b"
                android:textSize="@dimen/dimen_16" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_28"
        android:background="@color/color_f2_f3_f8" />

    <LinearLayout
        android:id="@+id/llWallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_17"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_yue"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_wallet_balance"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="right"
            android:textColor="@color/color_a0_a7_bc"
            android:textSize="@dimen/dimen_16"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llRealNameVerify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_shim"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_real_name_verify"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/tvVerifyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="right"
            android:text="@string/app_not_verify"
            android:textColor="@color/color_a0_a7_bc"
            android:textSize="@dimen/dimen_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyLoan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_daik"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_my_loan_2"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:textSize="@dimen/dimen_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyBackMoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_huank"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_my_back_money"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:textSize="@dimen/dimen_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOnlineService"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_kefu"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_online_service"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:textSize="@dimen/dimen_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCommonQuestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/jd_pro_went"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/app_common_question"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/jd_icon_next"
            android:textSize="@dimen/dimen_16" />
    </LinearLayout>


</LinearLayout>