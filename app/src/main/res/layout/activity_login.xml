<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2_f3_f8"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jd_bg_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_40"
            android:text="@string/app_can_loan_highest_money"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="@dimen/dimen_30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:gravity="center"
            android:text="@string/app_loan_tip"
            android:textColor="@color/color_e6_e9_f8"
            android:textSize="@dimen/dimen_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="-120dp"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_100"
        android:background="@drawable/app_shape_ffffff_8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_44">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_30"
                android:paddingBottom="@dimen/dimen_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_login"
                    android:textColor="@color/color_49_68_ea"
                    android:textSize="@dimen/dimen_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:background="@drawable/app_shape_4968ea_1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_30"
                android:paddingBottom="@dimen/dimen_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_register"
                    android:textColor="@color/color_db_db_db"
                    android:textSize="@dimen/dimen_18" />

                <View
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:background="@drawable/app_shape_4968ea_1"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>


        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@null"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="@dimen/dimen_20"
            android:gravity="center_vertical"
            android:hint="@string/app_please_input_phone"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e8_ea_ef" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@null"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/dimen_20"
            android:gravity="center_vertical"
            android:hint="@string/app_please_input_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_0d_0d_0d"
            android:textSize="@dimen/dimen_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e8_ea_ef" />

        <LinearLayout
            android:id="@+id/llVerCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginTop="@dimen/dimen_16"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/etVerCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/code"
                android:drawablePadding="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:hint="@string/app_please_input_verify_code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/tvGetVerCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_44"
                android:gravity="center_vertical|right"
                android:minWidth="@dimen/dimen_65"
                android:text="@string/app_get_ver_code"
                android:textColor="@color/color_0d_0d_0d"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

        <View
            android:id="@+id/lineVerCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_e8_ea_ef"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:background="@drawable/app_shape_879cf5_25"
            android:gravity="center"
            android:text="@string/app_login"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="@dimen/dimen_18" />

    </LinearLayout>


</LinearLayout>